<% if @params_present %>
  <div class="mx-auto text-center my-4 bg-transparent">
    <%= paginate @recipes %>
  </div>
<% end %>

<% if @recipes.any? %>
  <section class="rounded grid grid-cols-3 gap-4 mb-4 mt-4">
    <%= render 'list', recipes: @recipes, cached: true %>
  </section>
<% else %>
  <%= render 'not_found' %>
<% end %>

